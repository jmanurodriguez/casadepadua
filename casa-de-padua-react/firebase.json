{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "destination": "https://padua-backend.onrender.com/api/:path"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
